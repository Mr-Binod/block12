


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>signup</title>
</head>
<body>
    <%- include('../common/header') %>
    sign up page
    <form action="" id="signupform">
        <label for="">name</label>
        <input type="text" name="uname" id="">
        <label for="">uid</label>
        <input type="text" name="uid" id="">
        <label for="">upw</label>
        <input type="text" name="upw" id="">
        <button>submit</button>
    </form>
</body>
<script>
    signupform.onsubmit = async (e) => {
        e.preventDefault();
        const {uname : {value : unamevalue}, uid : {value : uidvalue}, upw : {value : upwvalue}} = e.target;
        console.log(unamevalue, uidvalue, upwvalue)
        const {data} = await axios.post('/user/signup', {unamevalue, uidvalue, upwvalue});
        console.log(data)
        if(data.state === 200) {
            location.href = '/user/login'
        }
        else if(data.state === 400) {
            alert('중복 아이디 회원 가입 입니다')
        }
        else { 
            alert(data.message)
        }
    }
</script>
</html>