    <!-- form 의 기본 mehod get  -->
     <!-- local host 에는 action 에 locaㅣfile 경로로 접근 할수 있다 -->
    <!-- <form action="http://www.blockchai.com/board" method="post">  -->
    <form action="/board?index=1" method="post"> 
        <label for="">제목</label>
        <input type="text" name="title">
        <label for="">내용</label>
        <input type="text" name="content">
        <button>글 추가</button>
    </form>
    <!--  -->
    <form action="/update"></form>
            
</body>
