

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('header') %>
    <form action="" id="signupform">
        <label for="">nickname</label>
        <input type="text" name="nid">
        <label for="">id</label>
        <input type="text" name="uid">
        <label for="">password</label>
        <input type="text" name="upw">
        <button>signup</button>
    </form>
    
</body>
<script>
    signupform.onsubmit = async (e) => {
        e.preventDefault();
        const {nid : {value : nidvalue}, uid : {value : uidvalue}, upw : {value : upwvalue}} = e.target;
        const {data} = await axios.post('/signup', {nid : nidvalue, uid : uidvalue, upw : upwvalue})
        console.log(data)
        if(data.state === 200) {
            location.href = '/login';
        }
        else {
            alert('중복 아이디')
        }
    }   
</script>
</html>